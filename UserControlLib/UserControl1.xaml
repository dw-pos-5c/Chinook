<UserControl x:Class="UserControlLib.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Slider Name="sldMain" ValueChanged="sldMain_ValueChanged" Value="{ Binding Value, Mode=TwoWay}"></Slider>
        <Label Name="lblMain" Margin="23,25,26,10" Content="{ Binding Value  }"></Label>
    </Grid>
</UserControl>
